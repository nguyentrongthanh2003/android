<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_shape">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tieuDe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luận văn tiến sĩ"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@drawable/background_title"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Mô tả -->
    <TextView
        android:id="@+id/moTa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả tài liệu: Đây là nội dung mô tả của tài liệu. Bạn có thể thêm thông tin mô tả chi tiết ở đây."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:background="@drawable/background_description"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Giá -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/giaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá:"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/gia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150.000 VNĐ"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Tác giả -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_author"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tacGiaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Tác giả: "
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tacGia1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Trọng Thành"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Số điện thoại -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewSoDienThoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Liên hệ:"
            android:textColor="@color/agree_button"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/soDienThoai1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textColor="@color/agree_button"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Button Gọi -->
    <Button
        android:id="@+id/btn_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gọi ngay"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/background_button"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>
