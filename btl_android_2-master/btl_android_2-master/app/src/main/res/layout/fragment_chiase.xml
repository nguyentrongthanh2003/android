<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ui.chiaSe.fragment_chiase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
            <TextView
            android:textColor="@color/purple_700"
                android:background="@drawable/bgchiase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_weight="1"
            android:textSize="28sp"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1.5"
            android:text="Chia sẻ Tài Liệu"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:layout_width="0dp"
                android:textColor="@color/material_dynamic_primary40"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tên:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="left"/>


            <EditText

                android:id="@+id/ten_tai_lieu"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="50dp"
                android:inputType="text"
              />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:textColor="@color/material_dynamic_primary40"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Mô tả:"
                android:textStyle="bold"
                android:gravity="left"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/mo_ta"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:inputType="textMultiLine"
                />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />



    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/material_dynamic_primary40"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nội dung:"
            android:gravity="center"
            android:textStyle="bold"

            android:textSize="18sp" />

        <Button
            android:id="@+id/chon_file"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/article_24dp_fill0_wght400_grad0_opsz24"
            android:text="Chọn file" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:padding="15dp"
        >


        <EditText
            android:id="@+id/noi_dung"
            android:padding="10dp"
            android:gravity="start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:background="@drawable/border_edittext"/>

    </LinearLayout>


    <Button
        android:id="@+id/chia_se"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_margin="10dp"
        android:text="Chia sẻ" />

</LinearLayout>