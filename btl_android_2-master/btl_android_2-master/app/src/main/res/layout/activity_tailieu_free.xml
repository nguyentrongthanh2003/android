<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/tieuDe1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Luận văn tiến sĩ"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="#B35575"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Tác giả và hình ảnh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/white"
            android:src="@drawable/user"
            android:contentDescription="Tác giả"/>

        <TextView
            android:id="@+id/tacGia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Nguyễn Trọng Thành"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Mô tả -->
    <TextView
        android:id="@+id/moTa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Mô tả tài liệu và ..."
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <!-- Giá -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Button Download -->
        <TextView
            android:id="@+id/gia1"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@color/teal_700"
            android:gravity="center"
            android:padding="12dp"
            android:text="Miễn Phí"
            android:textColor="#FCFCFC"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="2"
            android:background="#374AB3"
            android:gravity="center"
            android:padding="16dp"
            android:text="Download"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- WebView -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/webview_border"
        android:layout_weight="1"/>

</LinearLayout>
